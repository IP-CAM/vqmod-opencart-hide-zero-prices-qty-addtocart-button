            <?php } else { ?>
            <?php // kanenas: knns_journal2_product_hide_zero_prices.xml (end) << ?>
			]]></add>
		</operation>
		<operation error="skip">
			<search position="after"><![CDATA[<li class="product-price"><?php echo $price; ?></li>]]></search>
